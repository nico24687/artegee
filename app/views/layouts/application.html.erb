<!DOCTYPE html>
<html>
  <head>
    <title>Artegee</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    


  </head>

  <body>


    <nav class="navbar navbar-inverse navbar-fixed-top app-navbar">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-main">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
       
          
        </div>
        <div class="navbar-collapse collapse" id="navbar-collapse-main">

            <ul class="nav navbar-nav hidden-xs">
              <li><%= link_to "Home", root_path %></li>
              <% if current_user %>
              <li><%= link_to "Profile", user_path(current_user) %></li>
              <li><%= link_to "Portfolio",  user_portfolio_index_path(current_user) %></li>
              <% end %>
            </ul>

            <ul class="nav navbar-nav navbar-right m-r-0 hidden-xs">
              <% if current_user == nil %>
              <li><%= link_to "Sign Up", new_user_path %> </li>
              <li><%= link_to "Login", login_path%></li>
              <% end %>
              <% if current_user %>
              <li>
                <button class="btn btn-default navbar-btn navbar-btn-avitar" data-toggle="popover" data-original-title="" title="">
                  <%= image_tag current_user.avatar.url(:thumb), class: "img-circle"%>
                </button>
               </li>
              <li><%= link_to 'Logout', logout_path, method: :delete %></li>
              <% end %>
            </ul>
          </div>
      </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">
              <p></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
              <p></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
              <p></p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
              <p></p>
            </div>
        </div>
    </div>

   
 

    <%= yield %>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
      <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
  </body>
</html>
