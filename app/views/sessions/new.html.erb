<% if false %>
<%= form_tag login_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :user_name %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag "Submit" %>
<% end %>
<% end %>


<div class="container-fluid container-fill-height">
  <div class="container-content-middle">
    <div class="m-x-auto text-center app-login-form">

      <a href="../index.html" class="app-brand m-b-lg">
        <%= image_tag("artegee-logo.png", size: "200") %>
      </a>

      <%= form_tag login_path do %>

        <div class="container">
          <div class="row">
            <div class="col-md-offset-5 col-md-2">
              <%= text_field_tag :user_name, nil, class: "form-control", placeholder: "Username", style: "margin-bottom: 20px; margin-top: 20px;" %> 
            </div>
          </div>
        </div>

        <div class="container">
          <div class="row">
            <div class="col-md-offset-5 col-md-2">
              <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password", style: "margin-bottom: 25px;" %>
            </div>
          </div>
        </div>

        <%= submit_tag "Submit", class: "btn btn-primary-outline" %>

      <% end %>

    </div>
  </div>
</div>








